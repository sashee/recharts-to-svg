
{
  "compilerOptions": {
    "noEmitOnError": true,

		"strict": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
		"skipLibCheck": true,

    "sourceMap": true,
    "target": "es2024",
		"module": "esnext",
    "moduleResolution": "bundler",
		"declaration": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*.*"
  ],
	"exclude": [
		"src/**/*.test.ts"
	]
}

